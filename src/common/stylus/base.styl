body,html
	font-weight:200
	font-family:'PingFang SC','STHeitiSC-Light','Helvetica-Li',arial,sens-serif

.clearfix
	display:inline-block
	&:after
			display:block
			content:'.'
			height:0
			line-height:0
			clear:both
			visibility:hidden

@media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5)
	.border-1px
		&::after
			-webkit-transform:scaleY(0.7)
			trasform:scaleY(0.7)

@media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
	.border-1px
		&::after
			-webkit-transform:scaleY(0.5)
			trasform:scaleY(0.5)